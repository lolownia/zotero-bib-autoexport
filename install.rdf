<?xml version="1.0"?>
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
		xmlns:em="http://www.mozilla.org/2004/em-rdf#">
	
	<Description about="urn:mozilla:install-manifest">
		<em:id>zoterobibautoexport@koziej.info</em:id>
		<em:name>Bib Autoexport Plugin for Zotero</em:name>
		<em:version>0.1</em:version>
		<em:description>This plugin for Zotero Standalone (i've not tested it on Zotero
plugin) exports the collection to a collection.bib file in Zotero
Resources directory (on Mac OS X it's
/Applications/Zotero.app/Contents/Resources/collection.bib).

The file is exported with every modification, waiting 15 seconds which
allows you to finish all the edits, if you edit multiple fields of a
record.
		</em:description>
		<em:creator>Marcin Koziej &lt;marcin@koziej.info&gt;</em:creator>
		<em:updateURL>https://koziej.info/404/plugins.rdf</em:updateURL>
		<em:type>2</em:type> <!-- type=extension -->
		
		<!-- Requires Zotero -->
		<em:requires>
			<Description>
				<em:id>zotero@chnm.gmu.edu</em:id>
				<em:name>Zotero</em:name>
				<em:homepageURL>http://www.zotero.org</em:homepageURL>
				<em:minVersion>2.1</em:minVersion>
				<em:maxVersion>4.0.*</em:maxVersion>
			</Description>
		</em:requires>
    
		<!-- Requires Firefox or Zotero Standalone -->
		<em:targetApplication>
			<Description>
				<em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
				<em:minVersion>3.6</em:minVersion>
				<em:maxVersion>7.*</em:maxVersion>
			</Description>
		</em:targetApplication>
		<em:targetApplication>
			<Description>
				<em:id>zotero@chnm.gmu.edu</em:id>
				<em:minVersion>2.1</em:minVersion>
				<em:maxVersion>4.0.*</em:maxVersion>
			</Description>
		</em:targetApplication>
	</Description>
</RDF>
